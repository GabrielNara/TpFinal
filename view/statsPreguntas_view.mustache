<div class="mx-8 my-2">
    <p class="my-2 text-xl font-semi-bold">JUGADORES NUEVOS</p>
    <form action="/tpFinal/administrador/statsPreguntas" method="GET" class="flex items-center">
        <select name="filtro" class="border border-solid border-gray-500 w-36 p-2 mx-2 focus:outline-none">
            <option value="D" {{#filtroDia}}selected{{/filtroDia}}>Día</option>
            <option value="S" {{#filtroSemana}}selected{{/filtroSemana}}>Semana</option>
            <option value="M" {{#filtroMes}}selected{{/filtroMes}}>Mes</option>
            <option value="A" {{#filtroAnio}}selected{{/filtroAnio}}>Año</option>
        </select>
        <button type="submit"
                class="border border-solid border-gray-500 w-24 p-2 mx-2 hover:bg-gray-500 hover:text-white duration-200">
            Filtrar
        </button>
    </form>
</div>
<div class="flex flex-col items-center justify-center">
    <div id="grafico" style="width: 500px; height: 400px;"></div>
</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Categoría', 'Valor'],
            ['Preguntas en juego', {{cantPreguntasActivas}}],
            ['Preguntas creadas',{{cantPreguntasSugeridas}}],
        ]);

        var options = {
            title: 'Gráfico de Torta'
        };

        var chart = new google.visualization.PieChart(document.getElementById('grafico'));
        chart.draw(data, options);
    }
</script>

</body>
</html>
