{{> header}}

<div class="relative">
    <div class="absolute inset-0 bg-gray-100">
        <!-- Fondo blanco que cubre todo el contenido -->
    </div>
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/TpFinal/public/img/fondoincorrecto.jpg')">
        <!-- Imagen de fondo -->
    </div>
    <div class="flex flex-col items-center justify-center min-h-screen relative">
        <div class="w-full md:w-2/3 lg:w-1/2 xl:w-1/3 bg-white rounded-lg p-8 shadow-lg text-center">
            <div class="flex items-center justify-center mb-8">
                <img src="/TpFinal/public/img/caratriste.png" class="w-1/2 md:w-1/3" alt="Imagen" />
                <h2 class="text-3xl font-bold text-red-500 ml-4">Fallaste!</h2>
            </div>
            <p class="text-lg mb-2">Puntaje: <span class="font-semibold">{{puntos}}</span></p>
            <p class="text-lg mb-4">Respuesta correcta:</p>
            <p class="text-lg mb-8">
                <span class="font-semibold text-red-500">{{respuesta}}</span>
            </p>
            <div class="flex justify-center mb-4">
                <a href="/tpFinal/partida/crearPartida" class="mr-4 py-2 px-4 bg-red-500 text-white font-semibold rounded hover:bg-red-600">Jugar de nuevo</a>
                <a href="/tpfinal/lobby" class="py-2 px-4 border border-red-500 text-red-500 font-semibold rounded hover:bg-red-500 hover:text-white">Volver al lobby</a>
            </div>
        </div>
    </div>
</div>


