{{> header}}

<style>
    .neon-border {
        position: relative;
        box-shadow: 0 0 20px #bc40de, 0 0 40px #bc40de, 0 0 60px #bc40de;
    }
</style>

<div class="relative">
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/TpFinal/public/img/quiz_time.jpg')"></div>
    <div class="flex flex-col items-center justify-center min-h-screen relative">
        <div class="w-full md:w-2/3 lg:w-1/2 xl:w-1/3 bg-white rounded-lg p-8 shadow-lg text-center neon-border">
            <div class="flex items-center justify-center mb-8">
                <img src="/TpFinal/public/img/caratriste1.png" class="w-1/2 md:w-1/3" alt="Imagen" />
                <h2 class="text-3xl font-bold text-purple-500 ml-4">Fallaste!</h2>
            </div>
            <p class="text-lg mb-2">Puntaje: <span class="font-semibold text-purple-700">{{puntos}}</span></p>
            <p class="text-lg mb-4">Respuesta correcta:</p>
            <p class="text-lg mb-8">
                <span class="font-semibold text-red-500">{{respuesta}}</span>
            </p>
            <div class="flex justify-center mb-4">
                <a href="/tpFinal/partida/crearPartida" class="mr-4 py-2 px-4 bg-purple-600 text-white font-semibold rounded hover:bg-purple-700">Jugar de nuevo</a>
                <a href="/tpfinal/lobby" class="py-2 px-4 border border-purple-600 text-purple-600 font-semibold rounded hover:bg-purple-600 hover:text-white">Volver al lobby</a>
            </div>
        </div>
    </div>
</div>

