<div class="mx-8 my-2">
    <p class="my-2 text-xl font-semi-bold">PARTIDAS JUGADAS</p>
    <form action="/tpFinal/administrador/cantPartidasJugadas" method="GET" class="flex items-center">
        <select name="filtro" class="border border-solid border-gray-500 w-36 p-2 mx-2 focus:outline-none">
            <option value="dia" {{#filtroDia}}selected{{/filtroDia}}>Día</option>
            <option value="semana" {{#filtroSemana}}selected{{/filtroSemana}}>Semana</option>
            <option value="mes" {{#filtroMes}}selected{{/filtroMes}}>Mes</option>
            <option value="anio" {{#filtroAnio}}selected{{/filtroAnio}}>Año</option>
        </select>
        <button type="submit"
                class="border border-solid border-gray-500 w-24 p-2 mx-2 hover:bg-gray-500 hover:text-white duration-200">
            Filtrar
        </button>
    </form>
</div>
<div class="flex flex-col items-center justify-center">
    <h1 id="chart_title" class="text-3xl"></h1>
    <div id="chart_div" class="flex justify-center my-3"></div>
    <!--  <a href="/tpFinal/administrador/convertirApdf" target="_blank">Prueba</a> -->
    <form action="/tpFinal/administrador/convertirApdf" method="POST" class="flex items-center">

        <input type="hidden" name="data1" value="{{data1}}">
        <input type="hidden" name="data2" value="{{data2}}">

        <button type="submit"
                class="border border-solid border-gray-500 w-24 p-2 mx-2 hover:bg-gray-500 hover:text-white duration-200">
            HACER PDF
        </button>
    </form>

</div>

<button id="generar_pdf_btn" type="button"
        class="border border-solid border-gray-500 w-24 p-2 mx-2 hover:bg-gray-500 hover:text-white duration-200">
    Generar PDF
</button>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

    google.charts.load('current', {packages: ['corechart']});
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
        let cantidadPartidasTotal = {{cantidadPartidasTotal}};
        let data = new google.visualization.DataTable();
        let titulo_grafico = document.getElementById('chart_title');

        {{#filtroAnio}}
            titulo_grafico.innerText = 'Partidas nuevas por año.';
            data.addColumn('number', 'Año');
            data.addColumn('number', 'Partidas');
            let anios = {{anios}};
            for (let i = 0; i < anios.length; i++) {
                data.addRow([anios[i], cantidadPartidasTotal[i]]);
            }
        {{/filtroAnio}}

        {{#filtroMes}}
            titulo_grafico.innerText = 'Partidas nuevas por mes.';
            data.addColumn('string', 'Meses');
            data.addColumn('number', 'Partidas');
            let meses = [
                'Enero',
                'Febrero',
                'Marzo',
                'Abril',
                'Mayo',
                'Junio',
                'Julio',
                'Agosto',
                'Septiembre',
                'Octubre',
                'Noviembre',
                'Diciembre'
            ];
            for (let i = 0; i < meses.length; i++) {
                data.addRow([meses[i], cantidadPartidasTotal[i]]);
            }
        {{/filtroMes}}

        {{#filtroSemana}}
            titulo_grafico.innerText = 'Partidas nuevas por semana.';
            data.addColumn('string', 'Semanas');
            data.addColumn('number', 'Partidas');

            let fechas = [];

            for (let i = 0; i < 4; i++) {
                let fechaInicio = new Date();
                fechaInicio.setDate(fechaInicio.getDate() - i * 7);
                fechaInicio.setHours(0, 0, 0, 0);

                let inicio = ("0" + fechaInicio.getDate()).slice(-2) + "-" + ("0" + (fechaInicio.getMonth() + 1)).slice(-2);

                fechas.push(inicio);
            }

            fechas.sort();

            for (let i = 0; i < fechas.length; i++) {
                data.addRow([fechas[i], cantidadPartidasTotal[i]]);
            }
        {{/filtroSemana}}

        {{#filtroDia}}
            titulo_grafico.innerText = 'Partidas jugadas por dia.';
            data.addColumn('string', 'Días');
            data.addColumn('number', 'Partidas');

            let ultimos7Dias = [];
            let fechaActual = new Date();

            for (let i = 0; i < 7; i++) {
                let fecha = new Date(fechaActual);
                fecha.setDate(fecha.getDate() - i);
                let dia = fecha.getDate();
                let mes = fecha.getMonth() + 1;
                let fechaFormateada = dia.toString().padStart(2, '0') + '-' + mes.toString().padStart(2, '0');
                ultimos7Dias.push(fechaFormateada);
            }
            ultimos7Dias.sort();

            for (let i = 0; i < ultimos7Dias.length; i++) {
                data.addRow([ultimos7Dias[i], cantidadPartidasTotal[i]]);
            }
        {{/filtroDia}}

        let options = {
            curveType: 'function',
            legend: {position: 'bottom'},
            width: Math.floor(window.innerWidth * 0.95),
            height: 400,
            hAxis: {
                format: '0'
            },
            vAxis: {
                format: '0'
            }
        };

        let chart = new google.visualization.LineChart(document.getElementById('chart_div'));

        chart.draw(data, options);
    }

    document.getElementById('generar_pdf_btn').addEventListener('click', function () {
        var chartDiv = document.getElementById('chart_div');

        html2pdf()
                .from(chartDiv)
                .save('grafico.pdf');
    });
</script>
</body>
</html>
