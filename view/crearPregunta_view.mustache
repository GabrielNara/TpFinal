{{> header}}
<style>
    body {
        background-image: url("/TpFinal/public/img/quiz_time.jpg");
        background-size: cover;
        background-position: center;
    }
</style>
<nav class="flex px-5 py-3 text-gray-700 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-700"
     aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
            <a href="/tpFinal/lobby/list"
               class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
                <svg aria-hidden="true" class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20"
                     xmlns="http://www.w3.org/2000/svg">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                </svg>
                Lobby
            </a>
        </li>
        <li aria-current="page">
            <div class="flex items-center">
                <svg aria-hidden="true" class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"
                     xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                          clip-rule="evenodd"></path>
                </svg>
                <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">...</span>
            </div>
        </li>
    </ol>
</nav>
<div class="flex flex-col justify-center items-center w-full my-8 2xl:my-0 2xl:h-screen">
    <div class="flex flex-col justify-center items-center w-full my-8 2xl:my-0 2xl:h-screen">
        <h1 class="font-bold text-5xl text-center text-indigo-100">Crear pregunta</h1>
        <div class="bg-white p-12 rounded-lg shadow-lg w-[90%] sm:w-[500px] mt-8">
            <div class="w-full flex justify-end">
                <button class="hidden" id="reproducirMusica">
                    <i class="fa-solid fa-volume-high fa-2xl"></i>
                </button>
                <button id="pausarMusica">
                    <i class="fa-solid fa-volume-xmark fa-2xl"></i>
                </button>
            </div>
            <form action="crearPregunta" method="post">
                <input id="pregunta" name="pregunta" type="text" placeholder="Insertar pregunta"
                       value="{{datos.pregunta}}"
                       class="w-full mt-4 py-2 text-xl focus:outline-none border-b border-gray-300"/>
                <span class="text-sm bg-red-200 text-red-800">{{errores.errorPregunta}}</span>
                <input id="opcionA" name="opcionA" type="text" placeholder="Opción A (Opcion Correcta)"
                       value="{{datos.opcionA}}"
                       class="w-full mt-4 border border-gray-300 rounded-lg py-2 px-6 text-lg duration-100 focus:outline-gray-400"/>
                <span class="text-sm bg-red-200 text-red-800">{{errores.errorOpcionA}}</span>
                <input id="opcionB" name="opcionB" type="text" placeholder="Opción B" value="{{datos.opcionB}}"
                       class="w-full mt-4 border border-gray-300 rounded-lg py-2 px-6 text-lg duration-100 focus:outline-gray-400"/>
                <span class="text-sm bg-red-200 text-red-800">{{errores.errorOpcionB}}</span>
                <input id="opcionC" name="opcionC" type="text" placeholder="Opción C" value="{{datos.opcionC}}"
                       class="w-full mt-4 border border-gray-300 rounded-lg py-2 px-6 text-lg duration-100 focus:outline-gray-400"/>
                <span class="text-sm bg-red-200 text-red-800">{{errores.errorOpcionC}}</span>
                <input id="opcionD" name="opcionD" type="text" placeholder="Opción D" value="{{datos.opcionD}}"
                       class="w-full mt-4 border border-gray-300 rounded-lg py-2 px-6 text-lg duration-100 focus:outline-gray-400"/>
                <span class="text-sm bg-red-200 text-red-800">{{errores.errorOpcionD}}</span>
                <div class="mt-4">
                    <label for="categoria" class="text-lg">Categoría:</label>
                    <select id="categoria" name="categoria"
                            class="w-full mt-2 py-2 px-4 border border-gray-300 rounded-lg focus:outline-gray-400">
                        <option value="1">Deporte</option>
                        <option value="2">Geografía</option>
                        <option value="3">Música</option>
                        <option value="4">Entretenimiento</option>
                        <option value="5">Historia</option>
                        <option value="6">Tecnología</option>
                        <option value="7">Literatura</option>
                        <option value="8">Matemática</option>
                    </select>
                </div>
                <button type="submit"
                        class="w-full bg-indigo-600 text-white text-sm font-bold tracking-wide rounded-full my-5 px-5 py-2">
                    Enviar
                </button>
            </form>
        </div>
    </div>
</div>