{{> header}}
<!-- component -->
<body class="font-mono bg-gray-400">
<!-- Container -->
<div class="container mx-auto">
    <div class="flex justify-center px-6 my-12">
        <!-- Row -->
        <div class="w-full xl:w-3/4 lg:w-11/12 flex">
            <!-- Col -->
            <div
                    class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
                    style="background-image: url('https://cdn.aarp.net/content/dam/aarp/health/healthy-living/2022/04/1140-paper-word-bubbles-question-marks-esp.jpg')"
            ></div>
            <!-- Col -->
            <div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
                <h3 class="pt-4 text-2xl text-center">Creá una cuenta!</h3>
                <form class="px-8 pt-6 pb-8 mb-4 bg-white rounded" id="form-registro"
                      action="registrar"
                      method="POST"
                      enctype="multipart/form-data">
                    <div class="mb-4 md:flex md:justify-between">
                        <div class="mb-4 md:mr-2 md:mb-0">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="nombre">
                                Nombre
                            </label>
                            <input
                                    class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    id="nombre" name="nombre"
                                    type="text"
                                    placeholder="Nombre"
                            />
                        </div>
                        <div class="md:ml-2">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="apellido">
                                Apellido
                            </label>
                            <input
                                    class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    id="apellido" name="apellido"
                                    type="text"
                                    placeholder="Apellido"
                            />
                        </div>
                    </div>


                    <div class="mb-4 md:flex md:justify-between">
                        <div class="mb-4 md:mr-2 md:mb-0">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="username">
                                Nombre de Usuario
                            </label>
                            <input
                                    class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    id="username" name="username"
                                    type="text"
                                    placeholder="Nombre de usuario"
                            />
                        </div>
                        <div class="md:ml-2">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="localidad">
                                País y Ciudad
                            </label>
                            <input
                                    class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    id="localidad" name="localidad"
                                    type="text"
                                    placeholder="Pais y ciudad"

                            />
                        </div>
                    </div>


                    <div class="mb-4 md:flex md:justify-between">
                        <div class="mb-4 md:mr-2 md:mb-0">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="sexo">
                                Sexo
                            </label>
                            <input
                                    class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    id="sexo" name="sexo"
                                    type="text"
                                    placeholder="Sexo"
                            />
                        </div>
                        <div class="md:ml-2">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="fnacimiento">
                                Año de nacimiento
                            </label>
                            <input
                                    class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    id="fnacimiento" name="fnacimiento"
                                    type="number"
                                    placeholder="Año de Nacimiento"

                            />
                        </div>
                    </div>


                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-bold text-gray-700" for="email">
                            Email
                        </label>
                        <input
                                class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                id="email" name="email"
                                type="email"
                                placeholder="Email"
                        />
                    </div>
                    <div class="mb-4 md:flex md:justify-between">
                        <div class="mb-4 md:mr-2 md:mb-0">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="password">
                                Contraseña
                            </label>
                            <input
                                    class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    id="password" name="password"
                                    type="password"
                                    placeholder="******************"
                            />

                        </div>
                        <div class="md:ml-2">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="cpassword">
                                Repetir contraseña
                            </label>
                            <input
                                    class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    id="cpassword" name="cpassword"
                                    type="password"
                                    placeholder="******************"
                            />
                        </div>
                    </div>


                    <div class="flex h-screen:40vh justify-center items-center">

                        <div class="flex items-center shadow-md space-x-6 bg-white p-3 rounded-md">
                            <div class="shrink-0">
                                <img class="h-16 w-16 object-cover rounded-full"
                                     src="https://ik.imagekit.io/ktdjfymfk/pexels-pixabay-164595__2__tD_vGRYs2.jpg?ik-sdk-version=javascript-1.4.3&updatedAt=1654163121780"
                                     alt="s"/>
                            </div>
                            <label class="block">
                                <span class="sr-only">Choose profile photo</span>
                                <input type="file" name="fotoPerfil" class="block w-full text-sm text-slate-500
        file:mr-4 file:py-2 file:px-4
        file:rounded-full file:border-0
        file:text-sm file:font-semibold
        file:bg-violet-50 file:text-violet-700
        hover:file:bg-violet-100
      "/>
                            </label>
                        </div>

                    </div>


                    <div class="mb-6 text-center">
                        <button
                                class="w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline"
                                type="submit"
                        >
                            Registrarse
                        </button>
                    </div>
                    <hr class="mb-6 border-t"/>

                    <div class="text-center">
                        <a class="inline-block text-sm text-blue-500 align-baseline hover:text-blue-800" href="/tpfinal/login/list">
                            ¿Ya tenés una cuenta? Iniciá sesión
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</body>